<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Explore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#003700B3</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Light mode -->
    <!-- Screen background if Light mode on-->
<style name = "SCREEN">
<item name= "android:background">#FFFF</item>
</style>
    <!--Texts background if Light mode on -->
<style name="TEXT">
<item name = "android:textColor">#000000</item>
</style>
    <!--button background if Light mode on -->
<style name="BUTTON.">
<item name = "android:background">#000000</item>
<item name="android:textColor">#000000</item>
</style>
    <!--CardView background if Light mode on -->
<style name="CARD">
<item name = "cardBackgroundColor">#8C7373</item>
</style>
    <style name="Theme.Explore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Explore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Explore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>